{
    "info": {
        "name": "VulnShop API Collection",
        "_postman_id": "vulnshop-collection-v1",
        "description": "Collection for testing VulnShop vulnerable API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3001",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/auth/register",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"Test\",\n  \"last_name\": \"User\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const response = pm.response.json();",
                                    "pm.environment.set('token', response.token);",
                                    "pm.environment.set('user_id', response.user.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/auth/login",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Forgot Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/auth/forgot-password",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@vulnshop.com\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Users",
            "item": [
                {
                    "name": "Get User by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/users/{{user_id}}"
                    }
                },
                {
                    "name": "Get User by ID (BOLA Test)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/users/1"
                    }
                },
                {
                    "name": "List All Users",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/users"
                    }
                },
                {
                    "name": "Update User Profile",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/users/{{user_id}}",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"first_name\": \"Updated\",\n  \"last_name\": \"Name\",\n  \"email\": \"updated@example.com\"\n}"
                        }
                    }
                },
                {
                    "name": "Update User (Mass Assignment Test)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/users/{{user_id}}",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"role\": \"admin\",\n  \"credit_card\": \"9999999999999999\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "List Products",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/products"
                    }
                },
                {
                    "name": "Search Products",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/products?search=shirt"
                    }
                },
                {
                    "name": "Search Products (SQL Injection Test)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/products?search=' OR '1'='1"
                    }
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/products/1"
                    }
                },
                {
                    "name": "Old API Version (v1)",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/products"
                    }
                }
            ]
        },
        {
            "name": "Cart",
            "item": [
                {
                    "name": "Get Cart",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/cart"
                    }
                },
                {
                    "name": "Get Cart (BOLA Test)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/cart?user_id=1"
                    }
                },
                {
                    "name": "Add Item to Cart",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/cart/items",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"product_id\": 1,\n  \"quantity\": 2\n}"
                        }
                    }
                },
                {
                    "name": "Remove Item from Cart",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/cart/items/1"
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/orders",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"shipping_address\": \"123 Test Street, Test City\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Order by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/orders/1"
                    }
                },
                {
                    "name": "Get Order (BOLA Test)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/orders/2"
                    }
                },
                {
                    "name": "List My Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/orders"
                    }
                },
                {
                    "name": "List Orders (BOLA Test)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/orders?user_id=1"
                    }
                }
            ]
        },
        {
            "name": "Reviews",
            "item": [
                {
                    "name": "Create Review",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "url": "{{base_url}}/api/reviews",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"product_id\": 1,\n  \"rating\": 5,\n  \"comment\": \"Great product!\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Product Reviews",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/reviews/product/1"
                    }
                }
            ]
        },
        {
            "name": "Admin",
            "item": [
                {
                    "name": "Get All Users (Bypass Auth)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/admin/users?admin=true"
                    }
                },
                {
                    "name": "Get All Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/admin/orders"
                    }
                },
                {
                    "name": "Get Stats (No Auth Check)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/admin/stats"
                    }
                },
                {
                    "name": "Add Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "X-Admin-Key",
                                "value": "admin123"
                            }
                        ],
                        "url": "{{base_url}}/api/admin/products",
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"New Product\",\n  \"description\": \"Test product\",\n  \"price\": 29.99,\n  \"category\": \"Test\",\n  \"stock\": 100\n}"
                        }
                    }
                },
                {
                    "name": "Update Product (No Auth)",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
